package abstractfactory.apple.model.iphone;

import abstractfactory.apple.factory.CountryRulesAbstractFactory;

public abstract class Iphone {
    private final CountryRulesAbstractFactory rules;

    public Iphone(CountryRulesAbstractFactory rules) {
        this.rules = rules;
    }

    public abstract void getHardware();

    public void assemble() {
        System.out.println("Assembling all the hardwares");
    }

    public void certificates() {
        System.out.println(rules.getCertificate().applyCertification());
    }

    public void pack() {
        System.out.println(rules.getPacking().pack());
    }
}
